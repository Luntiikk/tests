<Window x:Class="OfficeEquipmentRepair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfficeEquipmentRepair"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="400" MinHeight="450" MinWidth="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="0" FontWeight="Bold" FontSize="30"/>
        <Label Content="Логин" HorizontalAlignment="Left" FontSize="20" Grid.Row="1" Height="40" VerticalAlignment="Top" Margin="45,0,0,0"/>
        <TextBox x:Name="tbLogin" Grid.Row="1" Margin="45" />
        <Label Content="Пароль" HorizontalAlignment="Left" FontSize="20" Grid.Row="2" Height="40" VerticalAlignment="Top" Margin="45,0,0,0"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="2" Margin="45" />
        <Button x:Name="btAuthorization" Grid.Row="4" Content="Авторизоваться" Margin="50,20,50,10" Click="btAuthorization_Click"/>
    </Grid>
</Window>
